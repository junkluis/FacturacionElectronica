{% block javascripts %}


<script type="text/javascript">
	$(document).ready(function() {
	    $('#facturas').DataTable( {
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json'
            }
        });
        $('#fechainicio').datepicker({
            uiLibrary: 'bootstrap'
        });
        $('#fechafinal').datepicker({
            uiLibrary: 'bootstrap'
        });
        $('#fechaemision').datepicker({
            uiLibrary: 'bootstrap'
        });
        $('select.selectpicker').on('change', function(){
            seleccionarProducto($(this));
        });
        $('input.Cantidad').on('change', function(){
            cambiarCantidad($(this));
        });
        $('.agregarProducto').on('click', function(){
            agregarProducto();
            console.log($("#detalles"));
        })
	} );

    

    function mostrarFiltros(){
        if($("#filtros").is(":visible")){
            $("#filtros").slideUp();
            $("#btn-filtro").empty();
            $("#btn-filtro").append("Mostrar Filtros");
        } else {
            $("#filtros").slideDown();
            $("#btn-filtro").empty();
            $("#btn-filtro").append("Esconder Filtros");
        }
    }

    function abrirModalFactura(){
        hoy = new Date();
        fecha = (hoy.getMonth()+1) + "/" + hoy.getDate() + "/" + hoy.getFullYear();
        $("#ModalFactura").modal('show');
        $("#fechaemision").val(fecha);
    }


</script>

